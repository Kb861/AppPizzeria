<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             style="@style/match">

    <TextView
            android:text="@string/app_name"
            android:textSize="@dimen/text20sp"
            android:textColor="@color/colorPrimary"
            style="@style/wrap"
            android:id="@+id/textView_pizza" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/marigin8dp"
            android:layout_marginTop="@dimen/marigin8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/button_show" android:layout_marginEnd="@dimen/marigin8dp"
            app:layout_constraintEnd_toStartOf="@+id/button_show"
            />
    <Button
            android:text="@string/add"
            style="@style/wrap"
            android:background="@drawable/circle_button"
            android:id="@+id/button_show"
            android:layout_marginTop="@dimen/marigin8dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimary"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="@dimen/marigin8dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</RelativeLayout>