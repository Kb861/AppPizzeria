<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/match"
        tools:context=".MainActivity">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="@string/createpizza" app:layout_constraintStart_toStartOf="parent"
              android:textSize="30sp" android:textColor="@color/colorPrimaryDark"
              android:textStyle="bold" android:textAlignment="center"
              android:layout_marginStart="@dimen/marigin8dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp" android:layout_marginTop="@dimen/marigin8dp" app:layout_constraintTop_toTopOf="parent"
              android:layout_marginBottom="@dimen/marigin8dp"
              android:id="@+id/textView2"/>

    <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                            android:layout_height="494dp"
                                            android:id="@+id/recyclerView_menu"
                                            app:layout_constraintTop_toTopOf="parent"
                                            android:paddingBottom="@dimen/marigin8dp"
                                            android:layout_marginTop="100dp"></android.support.v7.widget.RecyclerView>

    <Button android:layout_width="match_parent" android:layout_height="50dp"
            android:layout_marginBottom="@dimen/marigin8dp" android:background="@drawable/circle_buttongreen"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/marigin8dp" android:id="@+id/button_order" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/marigin8dp" android:textColor="@color/colorPrimary"
            android:text="@string/ready"
    />
    <TextView
            style="@style/wrap"
            android:id="@+id/tv"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            android:layout_marginStart="8dp" android:layout_marginTop="@dimen/marigin8dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView_menu" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toTopOf="@+id/button_order"/>
    <TextView
            android:text="BAZA: ciasto + sos + ser "
            style="@style/wrap"
            android:id="@+id/textView_basic" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="@dimen/marigin8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:textColor="@color/colorPrimaryDark" android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/recyclerView_menu"/>
    <TextView
            android:text="@string/choose_ingredients_from_the_list"
            style="@style/wrap" android:textColor="@color/colorPrimary"
            android:id="@+id/textView3" android:layout_marginBottom="@dimen/marigin8dp"
            app:layout_constraintBottom_toTopOf="@+id/recyclerView_menu" android:layout_marginTop="@dimen/marigin8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_basic"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
       />
    <TextView
            android:text="@string/together"
            style="@style/wrap"
            android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/marigin8dp" android:layout_marginTop="@dimen/marigin8dp"
            app:layout_constraintTop_toBottomOf="@+id/recyclerView_menu" android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toTopOf="@+id/button_order"/>

</android.support.constraint.ConstraintLayout>