<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
       style="@style/match"
        tools:context=".OrderActivity">

    <TextView
            android:text="TextView"
            style="@style/wrap"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text20sp"
            android:id="@+id/bill" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="@dimen/marigin8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/marigin8dp" android:layout_marginTop="@dimen/marigin8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="@dimen/marigin8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/topay"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="30sp"
           style="@style/wrap"
            android:id="@+id/textView" android:layout_marginTop="@dimen/marigin8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/marigin8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="@dimen/marigin8dp"
            android:layout_marginBottom="@dimen/marigin8dp" app:layout_constraintBottom_toTopOf="@+id/bill"/>

</android.support.constraint.ConstraintLayout>